<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ez.gw.confirm.model.ConfirmDAO">
	<select id="selectCountByDate" resultType="int">
		select count(*) from confirm
		where trunc(create_date) = trunc(sysdate)
	</select>
	
	<insert id="insertConfirm" parameterType="confirmVo">
		insert into confirm(confirm_document_no,confirm_title,confirm_content,emp_no,confirm_line_no,document_no)
		values(#{confirmDocumentNo},#{confirmTitle},#{confirmContent},#{empNo},#{confirmLineNo},#{documentNo})
	</insert>
</mapper>